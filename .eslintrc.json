{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended-type-checked"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": true,
    "tsconfigRootDir": "./tsconfig.json"
  },
  "parser": "@typescript-eslint/parser",
  "rules": {
    "sort-imports": "error"
  }
}
